<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/itemordershipperhistory"
    android:orientation="vertical">
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="6"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/mahoadonSPODHR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Mã"
                android:textStyle="italic"
                android:textColor="@color/teal_700"
                android:textSize="18sp"
                android:layout_weight="1"
                >

            </TextView>
            <TextView
                android:id="@+id/nguoimuaSPODHR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="người mua"
                android:textStyle="italic"
                android:textColor="@color/teal_700"
                android:textSize="18sp"
                android:layout_weight="2"
                >
            </TextView>

            <TextView
                android:id="@+id/tongtienSPODHR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Tổng tiền"
                android:textStyle="italic"
                android:textColor="@color/teal_700"
                android:textSize="18sp"
                android:layout_weight="2"
                >
            </TextView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tinhtrangSPODHR"
                android:text="Tình trạng"
                android:textStyle="italic"
                android:textColor="@color/teal_700"
                android:textSize="18sp"
                android:layout_weight="1"
                >

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btnhoanthanhSPODHR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Hoàn thành"
                android:layout_margin="5dp"
                android:layout_weight="2">

            </Button>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>